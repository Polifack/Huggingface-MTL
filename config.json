{
    "model_name": "roberta-base",
    "output_dir": "./ouptut/",
    "overwrite_output_dir": true,

    "learning_rate": 1e-5,
    "weight_decay": 0.01,
    "adam_epsilon": 1e-8,
    "adam_beta1": 0.9,
    "adam_beta2": 0.999,
    "num_train_epochs": 3,
    "max_seq_length": 16,
    "fp16": false,
    
    
    "do_eval": true,
    "do_train": true,
    "do_predict": true,

    "evaluation_strategy": "epoch",
    "logging_strategy": "epoch",
    "batch_truncation": true,
    "add_cls": true,
    "add_clf": true,
    "drop_probability": 0.1,
    "save_steps":1000000,
    "include_inputs_for_metrics": true,

    "tasks":[
        {
            "task_type": "token_classification",
            "task_name": "conllu",
            "train_file": "./data/train.conllu",
            "test_file": "./data/test.conllu",
            "eval_file": "./data/dev.conllu",
            "label_idx": [3],
            "tokens_idx": 1
        }
    ]
}